# Top-level declaration indicating this is the root of the configuration
root = true

# All files
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C# files
[*.cs]
indent_size = 4
# Suggest using 'var' when the type is apparent
csharp_style_var_when_type_is_apparent = true:suggestion
# Force new line for braces (Allman style - standard in C#)
csharp_new_line_before_open_brace = all

# Naming conventions
# 1. Interfaces must start with 'I'
dotnet_naming_rule.interface_should_be_begins_with_i.severity = error
dotnet_naming_symbols.interface_should_be_begins_with_i.applicable_kinds = interface
dotnet_naming_symbols.interface_should_be_begins_with_i.applicable_accessibilities = public, internal, private, protected, protected_internal
dotnet_naming_symbols.interface_should_be_begins_with_i.capitalization = pascal_case
dotnet_naming_style.interface_should_be_begins_with_i.required_prefix = I

# 2. Async methods should end with 'Async'
dotnet_naming_rule.async_methods_should_end_with_async.severity = suggestion
dotnet_naming_symbols.async_methods_should_end_with_async.applicable_kinds = method
dotnet_naming_symbols.async_methods_should_end_with_async.applicable_accessibilities = *
dotnet_naming_style.async_methods_should_end_with_async.required_suffix = Async