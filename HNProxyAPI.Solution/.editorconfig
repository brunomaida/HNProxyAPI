# Top-level declaration indicating this is the root of the configuration
root = true

# All files
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C# files
[*.cs]
indent_size = 4
tab_width = 4

# ==================================================================================
# Organized Usings
# ==================================================================================
# Sort using directives alphabetically
dotnet_sort_system_directives_first = true
# Place "System" directives first to separate framework dependencies from third-party
dotnet_separate_import_directive_groups = false

# ==================================================================================
# Naming Conventions
# ==================================================================================
# Style: Interfaces must start with 'I'
dotnet_naming_rule.interface_should_be_begins_with_i.severity = suggestion
dotnet_naming_rule.interface_should_be_begins_with_i.symbols = interface
dotnet_naming_rule.interface_should_be_begins_with_i.style = begins_with_i

dotnet_naming_symbols.interface.applicable_kinds = interface
dotnet_naming_style.begins_with_i.required_prefix = I
dotnet_naming_style.begins_with_i.capitalization = pascal_case

# Style: Types (Classes, Structs, Enums, Delegates) should be PascalCase
dotnet_naming_rule.types_should_be_pascal_case.severity = suggestion
dotnet_naming_rule.types_should_be_pascal_case.symbols = types
dotnet_naming_rule.types_should_be_pascal_case.style = pascal_case

dotnet_naming_symbols.types.applicable_kinds = class, struct, interface, enum
dotnet_naming_style.pascal_case.capitalization = pascal_case

# Style: Async methods should end with "Async" suffix
dotnet_naming_rule.async_methods_should_end_with_async.severity = suggestion
dotnet_naming_rule.async_methods_should_end_with_async.symbols = async_methods
dotnet_naming_rule.async_methods_should_end_with_async.style = end_with_async

dotnet_naming_symbols.async_methods.applicable_kinds = method
dotnet_naming_symbols.async_methods.applicable_accessibilities = *
dotnet_naming_style.end_with_async.required_suffix = Async
dotnet_naming_style.end_with_async.capitalization = pascal_case

# ==================================================================================
# Code Style Rules
# ==================================================================================
# Prefer "var" when the type is apparent from the right side of the assignment
csharp_style_var_when_type_is_apparent = true:suggestion

# Prefer "var" elsewhere (avoid strict type repetition)
csharp_style_var_elsewhere = true:suggestion

# Prefer "var" for built-in types (e.g., int, string)
csharp_style_var_for_built_in_types = true:suggestion

# Prefer braces even for one-line loops/ifs (reduces bugs when extending logic)
csharp_prefer_braces = true:silent

# Prefer pattern matching over "as" with null check
csharp_style_pattern_matching_over_as_with_null_check = true:suggestion

# Prefer null coalescing assignment (??=)
csharp_style_prefer_null_check_over_type_check = true:suggestion

# ==================================================================================
# Code Quality & Diagnostics (Treat Warnings as Errors Config)
# ==================================================================================
# CA1001: Types that own disposable fields should be disposable
dotnet_diagnostic.CA1001.severity = error

# CA1822: Mark members as static (performance optimization)
dotnet_diagnostic.CA1822.severity = warning

# CS8600 - CS8604: Nullability warnings (Enforce strict null checks)
dotnet_diagnostic.CS8600.severity = error
dotnet_diagnostic.CS8602.severity = error
dotnet_diagnostic.CS8603.severity = error

# IDE0005: Using directive is unnecessary (Keep code clean)
dotnet_diagnostic.IDE0005.severity = warning

# CA2007: Consider calling ConfigureAwait on the awaited task (Crucial for libraries, optional for Apps)
# Set to 'none' for WebAPI/Apps, 'warning' for Class Libraries
dotnet_diagnostic.CA2007.severity = none
dotnet_diagnostic.xUnit1051.severity = suggestion